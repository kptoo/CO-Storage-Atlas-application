{
  "name": "co2-storage-atlas",
  "version": "2.1.0",
  "description": "Interactive COâ‚‚ Storage Site Mapping Application for Upper Austria and Salzburg - Production Ready with Clustering and Performance Optimizations",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "start": "cross-env NODE_ENV=production node server.js",
    "setup-db": "node scripts/setup-database.js",
    "import-data": "node scripts/import-data.js",
    "setup-clean": "node scripts/setup-database-clean.js",
    "create-structure": "node scripts/create-structure.js",
    "maintenance": "node scripts/maintenance.js",
    "backup-db": "node scripts/backup-database.js",
    "optimize-db": "node -e \"const pool = require('pg').Pool; const p = new pool({host: process.env.DB_HOST, port: process.env.DB_PORT, user: process.env.DB_USER, password: process.env.DB_PASSWORD, database: process.env.DB_NAME}); p.query('VACUUM ANALYZE;').then(() => console.log('Database optimized')).finally(() => p.end());\"",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "validate": "npm run lint && npm run test",
    "build": "echo 'Building production assets...' && npm run validate",
    "deploy": "npm run build && npm run setup-db && npm run import-data && npm start",
    "reset": "npm run setup-db && npm run import-data",
    "logs": "tail -f logs/app.log",
    "clean": "rm -rf node_modules logs/* uploads/* && npm install",
    "check-db": "node -e \"require('./scripts/setup-database.js')\"",
    "create-icons": "mkdir -p public/icons",
    "performance-test": "node scripts/performance-test.js",
    "cluster-test": "node scripts/cluster-test.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5",
    "axios": "^1.5.0",
    "proj4": "^2.9.0",
    "shapefile": "^0.6.6",
    "adm-zip": "^0.5.10",
    "@turf/turf": "^6.5.0",
    "wellknown": "^0.5.0",
    "papaparse": "^5.4.1",
    "node-cron": "^3.0.2",
    "sharp": "^0.32.6",
    "cross-env": "^7.0.3",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.0.3",
    "@types/leaflet": "^1.9.0",
    "@types/node": "^20.5.0"
  },
  "keywords": [
    "geospatial",
    "co2",
    "mapping",
    "postgis",
    "austria",
    "shapefile",
    "gis",
    "carbon-capture",
    "environmental",
    "interactive-map",
    "clustering",
    "performance-optimized",
    "production-ready"
  ],
  "author": "Kiptoo",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/username/co2-storage-atlas.git"
  },
  "bugs": {
    "url": "https://github.com/username/co2-storage-atlas/issues"
  },
  "homepage": "https://github.com/username/co2-storage-atlas#readme",
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!jest.config.js",
      "!ecosystem.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-console": "warn",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}